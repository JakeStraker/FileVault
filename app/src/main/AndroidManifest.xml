<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lincoln.jake.filevault">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoreOptions"
            android:label="@string/title_activity_more_options"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lincoln.jake.filevault.MainActivity" />
        </activity>
        <activity android:name=".mountVault" />
        <activity android:name=".VaultSelector" />
        <activity android:name=".NewVault" />
        <activity android:name=".History1" />
        <activity android:name=".History2" />
        <activity android:name=".Wipe" />
        <activity android:name=".displayVault" />
    </application>

</manifest>
